mixin button(option)
  -
    const { content = '', title = '', status = '', type = 'default', cls = '', modify = '', link = '' } = option

    const typeClass = {
      thin: ' button-thin',
      text: ' button-text',
      pay: ' button-pay',
      default: '',
    }

    const statusClass = {
      thin: ' button-thin--disabled',
      text: ' button-text--disabled',
      default: ' button__target--disabled',
    }

  .button-wrap(class=`${ cls ? `button--${cls}` : '' }${ modify ? ` ${modify}` : '' }`)
    .button
      if title !== ''
        p.button__title= title
      if link !== ''
        a.button__target(class=`${status ? statusClass[type] : '' }${type ? typeClass[type] : '' }` href=link)= content
      else
        button.button__target(class=`${status ? statusClass[type] : '' }${type ? typeClass[type] : '' }`)= content
