mixin pagination(option = {})
  -
    const { title = '', modify = '' } = option;
    const pagination = [1, 2, 3, '...', 15]
    const active = 1

  .pagination(class=`${modify ? ` ${modify}__pagination` : ''}`)
    if title !== ''
      .pagination__title= title
    .pagination__wrap
      ul.pagination__list
        each val, key in pagination
          li.pagination__item(class=`${val === active ? 'active' : ''}${val === '...' ? 'pagination__item--middle' : ''}`)= val
      button.pagination__next
    p.pagination__text 1 – 12 из 100+ вариантов аренды
